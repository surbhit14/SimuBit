<%- include("header") %>
  <link rel="stylesheet" href="/css/login.css">
<div class="login-box" ng-app="myapp" ng-controller="ctrl">
  <h1>Login</h1>
<form action="/login" method="post" autocomplete="off">
  <input autocomplete="false" name="hidden" type="text" style="display:none;">
  <div class="textbox">
    <label for="Email">Email</label>
    <i class="fas fa-user"></i>
    <input type="text" placeholder="Email" name="username" ng-model="email">
  </div>

  <div class="textbox">
    <label for="Password">Password</label>
    <i class="fas fa-lock"></i>
    <input type="password" placeholder="Password" name="password" ng-model="password">
  </div>

  <button type="submit" class="lbtn" ng-click="checkValidationOnClick()">Login</button>
</form>
</div>
<script>
  var app = angular.module("myapp", []);
  app.controller("ctrl", function ($scope) {
   $scope.email="";
   $scope.password="";

   $scope.checkValidationOnClick = function () {
    if($scope.email==""|| $scope.password=="")
   {
     alert("All fields are mandatory");
   }
   }

  });
</script>

